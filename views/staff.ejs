<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Grubbin' Eats - Dashboard</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/staff.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <!-- nav bar  -->
    <%- include('partials/_nav') %>
    <div class = "outer-container">
    <h2>Staff Page</h1>
    <!-- button to order -->
    <h3>Accept orders here: </h3>
    <form class = "accept-orders" method = "POST" action = "/staff/">
      <label for ="order-id">Enter the order id: </label>
      <input type="text" name = "order_id">

      <label for = "completion-time">Enter completion minutes </label>
      <input type="text" name = "completion_time" placeholder="example: 20">

      <button id= "accept-button" type = "submit" > Accept Order </button>
    </form>
    <!-- active orders tables -->
    <h3> Active Orders </h3>
    <table id= "active-orders-table">
      <thead>
        <tr>
          <th>Order Number</th>
          <th>Order Placed Time</th>
          <th>Order Status</th>
        </tr>
      </thead>
      <tbody>
          <% for (let obj in order) { %>
            <tr>
              <td> <a href="/staff/order/<%= order[obj]['id'] %>"> <button class= "order-button"> <%= order[obj]['id'] %>  </button></a></td>
              <td> <%= moment(order[obj]['created_at']).format('MMMM Do YYYY, h:mm:ss a')  %></td>
              <td> <%= order[obj]['status'] %></td>
            </tr>
          <% } %>
      </tbody>
    </table>
    <!-- past orders tables -->
    <h3> Past Orders </h3>
    <table id= "past-orders-table">
      <thead>
        <tr>
          <th>Order Number</th>
          <th>Order Placed Time</th>
          <th>Order Status</th>
        </tr>
      </thead>
      <tbody>
        <% for (let obj in pastorder) { %>
          <tr>
            <td> <a href="/staff/order/<%= pastorder[obj]['id'] %>"> <button class="order-button"> <%= pastorder[obj]['id'] %>  </button></a> </td>
            <td> <%= moment(pastorder[obj]['created_at']).format('MMMM Do YYYY, h:mm:ss a')  %></td>
            <td> <%= pastorder[obj]['status'] %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  </body>
</html>
