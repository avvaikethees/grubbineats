<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Grubbin' Eats</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/client-order.css" type="text/css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/total-counter.js"></script>
  </head>

  <body>
    <!-- nav bar  -->
    <%- include('partials/_nav') %>
    <div class = "outer-box">
      <div class = "total-container">
        <h2> Your Total </h2>
        <p id="total-price">$0.00</p>
        <!-- button to order -->
        <form method = "POST" action = "/client/order">
          <button type = "submit"> Send Order </button>
      </div>
      <div class = "menu-container">
        <h2>Place your order here: </h2>
          <% for (const menu_item of menu_data) { %>
            <div id = "menu">
              <div class = "menu-row">
                <div class = "menu-image">
                  <img src = <%= menu_item['url_photo'] %> >
                </div>
                <div class = "menu-item">
                  <h3> <%= menu_item['item_name']%> </h3>
                  <p><%= menu_item['description'] %> </p>
                </div>
                <div class = "item-price">
                  $<%= menu_item['price_cents']/100 %>
                </div>
                <div class = "quantity-input">
                  <input name = "<%= menu_item['id'] %>" class="dish-counter" id= "<%= menu_item['price_cents']/100 %>" type="number" min="0" max ="50" value="0">
                </div>
              </div>
            </div>
          <% } %>
        </form>
      </div>
    </div>
  </body>
</html>
